<%= link_to booking, class: 'activity-item' do %>
    <%= render layout: 'image_and_content_box', locals: {ad: booking.ad} do %>
        <%= booking.activity_message current_user %>
        <br>
        <%= l booking.starts_at, format: :plendit_short_date %>
