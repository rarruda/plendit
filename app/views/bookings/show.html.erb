<%= render partial: "shared/personal_bar", locals: { selected: "Dine forespørsler" } %>

<div class="container">
    <div class="row">

        <div class="nine columns">

            <h3 class="u-push-down">Din forespørsel til <%= @booking.from_user.name %>.</h3>

            <%= render partial: "rental_request_box_renter", locals: {booking: @booking} %>

            <h3 class="u-push-down"><%= @booking.from_user.name %> ønsker å leie av deg</h3>

            <%= render partial: "rental_request_box_owner", locals: {booking: @booking} %>

        </div>
        <div class="three columns">
<!--             Fixme: this box, and the one below, should be in separate partials
            since they are reused I guess?
 -->
            <%= render layout: "gray_box", locals: {title: "Sendte forespørsler"} do %>
                <ul>
                    <li><a href="#">Thule bla bla</a></li>
                    <li><a href="#">Fjellheimen pulk med stor lastekapasitet</a></li>
                </ul>
                <hr>
                <a href="#">Vis alle</a>
            <% end %>

            <%= render layout: "gray_box", locals: {title: "Motatte forespørsler"} do %>
                <ul>
                    <li><a href="#">Thule bla bla</a></li>
                    <li><a href="#">Fjellheimen bla bla</a></li>
                </ul>
                <hr>
                <a href="#">Vis alle</a>
            <% end %>
        </div>
    </div>
</div>



<p>
  <strong>Ad item:</strong>
  <%= @booking.ad_item_id %> - <%= @booking.ad.title %>
</p>

<p>
  <strong>Requester user:</strong>
  <%= @booking.from_user_id %> - <%= @booking.from_user.name %>
</p>

<p>
  <strong>Booking status:</strong>
  <%= @booking.booking_status_id %> - <%= @booking.booking_status.status %>
</p>

<p>
  <strong>Price:</strong>
  <%= @booking.price %>
</p>

<p>
  <strong>Booking from:</strong>
  <%= @booking.booking_from %>
</p>

<p>
  <strong>Booking to:</strong>
  <%= @booking.booking_to %>
</p>

<p>
  <strong>First reply at:</strong>
  <%= @booking.first_reply_at %>
</p>

<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path %>
