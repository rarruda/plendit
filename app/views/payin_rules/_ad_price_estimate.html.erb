<div class="ad-price-estimate">
    <div class="main-price__row">
        <span class="main-price__label">Leiegebyr: </span>
        <span class="main-price__value">
            <%= format_monetary_full_pretty( @ad.booking_calculator.payin_amount(@payin_rule) ) %>
        </span>
    </div>
    <div class="main-price__row">
        <i>Inkluderer forsikring opp til </i>
        <i>
            <%= format_monetary_full_pretty( @ad.booking_calculator.max_insurance_coverage(@ad.main_payin_rule) ) %>
        </i>
    </div>
    <div class="main-price__row">
        <strong class="main-price__label">Utebetalt til deg: </strong>
        <strong class="main-price__value">
        <%= format_monetary_full_pretty( @ad.booking_calculator.payout_amount(@payin_rule) ) %>
        </strong>
    </div>
</div>
