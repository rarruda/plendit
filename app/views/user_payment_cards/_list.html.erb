<%= render layout: 'gray_box', locals: {title: 'Dine betalingskort', id: 'betalingskort'} do %>
    <%- if payment_card_notice -%>
        <div><%= payment_card_notice %> </div>
        <hr>
    <%- end -%>
    <% if @user.user_payment_cards.present? %>
        <ol class="locations-list">
            <%= render @user_payment_cards %>
        </ol>
    <% end %>
    <p>
      <%= link_to 'Legg til nytt kort', new_user_payment_card_path %>
    </p>
<% end %>