<p id="notice"><%= notice %></p>

<h1>Listing User Payment Cards</h1>

<table>
  <thead>
    <tr>
      <th>Number alias</th>
      <th>Expiration date</th>
      <th>Validity mp</th>
      <th>Active mp</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_payment_cards.each do |user_payment_card| %>
      <tr>
        <td><%= user_payment_card.number_alias %></td>
        <td><%= user_payment_card.expiration_date %></td>
        <td><%= user_payment_card.validity %></td>
        <td><%= user_payment_card.active %></td>
        <td><%= link_to 'Destroy', user_payment_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

