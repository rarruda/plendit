<!DOCTYPE html>
<html>
<head>
  <title>Plendit</title>
  <%= favicon_link_tag       'favicon-32x32.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    '//fonts.googleapis.com/css?family=Raleway:400,300,600' %>

  <%= javascript_include_tag '//maps.googleapis.com/maps/api/js?key=AIzaSyAwciykMKFfGsTiDrqAwg80C5FCSq6vQr8' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
    <%= render partial: "top_bar", locals: { hide_search_field: @hide_search_field } %>
</header>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

<footer>
    <%= render partial: "main_footer" %>
</footer>
</body>
</html>
