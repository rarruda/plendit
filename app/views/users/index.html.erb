<%= render partial: "shared/personal_bar" %>

<div class="container">
    <div class="row">
        <div class="six columns">
            <%= render layout: "bubble_box", locals: {title: "Mine annonser"} do %>
                <% unless current_user.ads.empty? %>
                    <ul>
                        <% current_user.ads.each do |ad| %>
                            <li>
                                <%= link_to ad.display_title, ad %>
                                <%= ad.display_status %>
                                <small>(oppdatert <%= ad.updated_at.to_formatted_s(:plendit_short_datetime) %>)</small>
                            </li>
                        <% end %>
                    </ul>
                <% else %>
                    Du har ikke publisert noen annonser ennå.
                <% end %>
                <%= button_to "Legg ut en ny annonse", new_ad_path, method: "get" %>
            <% end %>

            <%= render layout: "bubble_box", locals: {title: "Utestående vurderinger", color: "blue"} do %>
                <div>Ingen utestående vurderinger.</div>
            <% end %>
        </div>

        <div class="six columns">

            <%= render layout: "bubble_box", locals: {title: "Forespørsler", color: "red"} do %>
                <% unless current_user.current_bookings.empty? %>
                    <ul>
                        <% current_user.current_bookings.each do |booking| %>
                            <li>
                                <%= link_to booking.ad.display_title, booking %>
                                <%= booking.display_status %>
                                <small>(oppdatert <%= booking.ad.updated_at.to_formatted_s(:plendit_short_datetime) %>)</small>
                            </li>
                        <% end %>
                    </ul>
                <% else %>
                    Du har ingen åpne sendte eller mottatte forespørsler
                <% end %>
            <% end %>

            <%= render layout: "bubble_box", locals: {title: "Meldinger", color: "green"} do %>
                <h4>Siste meldinger</h4>
                <% unless current_user.received_messages.empty? %>
                    <ul>
                        <% current_user.received_messages.each do |message| %>
                            <li>
                                <%= link_to message.booking.ad.display_title, message.booking %>
                                <p><%= message.content[0..60] %></p>
                                <small>(<%= message.created_at.to_formatted_s(:plendit_short_datetime) %>)</small>
                            </li>
                        <% end %>
                    </ul>
                <% else %>
                    Du ikke mottatt noen meldinger
                <% end %>
            <% end %>

            <%= render layout: "gray_box", locals: {title: "Flere valg"} do %>
                <ul>
                    <li><%= link_to "Verifisering",     "#" %></li>
                    <li><%= link_to "Tilbakemeldinger", "#" %></li>
                    <li><%= link_to "See / edit my locations", locations_path %></li>
                </ul>

            <% end %>

        </div>
    </div>
</div>