<%= link_to users_feedback_path(feedback), class: 'public-profile-feedback' do %>
    <div class="public-profile-feedback__avatar-box">
        <%= avatar_image(feedback.from_user, :medium) %>
        <br>
        <%= feedback.from_user.display_name %>
    </div>
    <div class="public-profile-feedback__text-box">
        <h4>
            <%= feedback.booking.ad.decorate.display_title %>
            <%= stars(feedback.score, :medium) %>
        </h4>
        <p class="public-profile-feedback__description">
            <%= feedback.body %>
        </p>
    </div>
<% end %>