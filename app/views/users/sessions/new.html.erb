<div class="container u-push-down">

    <h2>Logg inn</h2>

    <p>
        Du kan velge mellom Ã¥ logge inn med en SPiD, Facebook eller Google konto,
        eller med en Plendit konto.
    </p>

    <div class="row">




        <div class="four columns">
            <%= image_tag "facebook/FB-f-Logo__blue_50.png", size: "50x50", alt: "" %>
            <%= button_to user_omniauth_authorize_path(:facebook), class: "button-primary", form_class: "u-inline" do %>
                Logg inn med facebook
            <% end %>
        </div>


        <div class="four columns">
            <%= image_tag "logos/google_50x50.png", size: "50x50", alt: "" %>
            <%= button_to user_omniauth_authorize_path(:google_oauth2), class: "button-primary", form_class: "u-inline" do %>
                Logg inn med Google
            <% end %>
        </div>

        <div class="four columns">
            <%= image_tag "logos/spid_117x50.png", size: "117x50", alt: "" %>
            <%= button_to user_omniauth_authorize_path(:spid), class: "button-primary", form_class: "u-inline" do %>
                Logg inn med SPiD
            <% end %>
        </div>

    </div>

    <hr>

    <div class="row">
        <div class="five columns">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="row">
                    <div class="six columns">
                        <%= f.label :email, "E-post:" %>
                        <%= f.email_field :email, autofocus: true, class: "u-full-width" %>
                    </div>
                    <div class="six columns">
                        <%= f.label :password, "Passord:" %>
                        <%= f.password_field :password, autocomplete: "off", class: "u-full-width" %>
                    </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <label for="remember_me">
                        <%= f.check_box :remember_me %>
                        Husk meg
                    </label>
                <% end -%>

                <div>
                    <%= f.submit "Logg inn", class: "button-primary" %>
                </div>
            <% end %>
        </div>
    </div>

    <hr>

    <%= render "users/shared/links" %>
    <div class="u-push-down"></div>

</div>