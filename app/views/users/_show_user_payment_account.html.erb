<%= render layout: "gray_box", locals: {title: "Kontonummer", id: "kontonummer"} do %>

<%- if @user.mangopay_provisionable? -%>

    <%- if payment_account_notice -%>
    <div class="row">
        <div class="eight columns">
            <%= payment_account_notice %>
        </div>
    </div>
    <%- end -%>

    <div class="row">
        <div class="eight columns">
          bank_account_number:
          <%= @user.user_payment_account.bank_account_number %>
          <p>
              <small>Vi trenger ditt kontonummer for å utbetale penger til deg.</small>
          </p>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns">
            <%= link_to "Oppdater", bank_account_users_path %>
        </div>
    </div>
<%- else -%>
    <p>
        <small>Når profilen din er komplett og vi har bekreftet din e-postadresse og ditt mobilnummer, kan du legge inn kontonummer.</small>
    </p>
    Før du kan legge inn ditt kontonummer, må du:
    <ul>
      <li>Bekrefte din e-postadresse.</li>
      <li>Bekrefte ditt mobilnummer.</li>
      <li>Legge inn din adresse.</li>
    </ul>
<%- end -%>

<% end %>