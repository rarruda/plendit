<div class="container">

    <div class="row">

        <div class="seven columns">
        <%= form_for(@ad) do |f| %>

            <h1>Legg ut annonse</h1>
            <p>
                Legg ut en annonse og tjen penger. Det tar mindre enn ett minutt!
                <a class="u-hidden-when-grid" href="#ad-input-info">Les mer</a>
            </p>

            <div class="input-progress"><div class="input-progress__step input-progress__step--current"><strong>Detaljer</strong></div><div class="input-progress__step"><strong>Bilder</strong></div><div class="input-progress__step"><strong>Publiser</strong></div>
            </div>

            <div class="row">
                <div class="nine columns">
                    <label>Overskrift:</label>
                    <%= f.text_field :title, class: 'u-full-width' %>
                    
                    <div class="row">
                        <div class="six columns">
                            <label>Pris pr dag:</label>
                            <%= f.text_field :price, class: 'u-full-width', data: {:controller => "syncPayout"} %>
                        </div>
                        <div class="six columns">
                            <label>Utbetales til deg:</label>
                            <input type="text" class="u-full-width" data-payout>
                        </div>
                    </div>
                    
                    <label>
                        <input type="checkbox">
                        <span><small>
                            <%#= f.check_box :insurance %> ja jeg ønsker forsikring (pluss 5% av total leiesum)
                        </small></span>
                    </label>

                    <input type="text" class="u-full-width" placeholder="gateadresse">

                    <div class="row">
                        <div class="four columns">
                            <input type="text" class="u-full-width" placeholder="By">
                        </div>
                        <div class="four columns">
                            <input type="text" class="u-full-width" placeholder="Fylke">
                        </div>
                        <div class="four columns">
                            <input type="text" class="u-full-width" placeholder="Postnummer">
                        </div>
                    </div>
                    <p>
                        Fyll ut så mange felt som mulig og vær så nøyaktig som du kan.
                    </p>

                </div>
            </div>

            <div>
                <div> map placeholder </div>

                <label>Kort Beskrivelse</label>
                <%= f.text_field :short_description, class: 'u-full-width' %>
                <label>Beskrivelse</label>
                <%= f.text_area :body, class: 'u-full-width'  %>

                <div> tags placeholder: <%= f.text_area :tags, class: 'u-full-width' %> </div>

                <%= f.submit 'Neste steg', class: 'u-pull-right' %>
                <!-- a class="u-pull-right" href="#">Neste steg</a -->
            </div>
        <%- end -%>
        </div>

        <div class="four columns offset-by-one column">
            <%= render partial: "ad_input_copy" %>
        </div>
    </div>
</div>

