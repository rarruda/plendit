<%
    calc = @ad.booking_calculator
%>
<% unless rule.payin_amount.nil? %>
    <div class="price-estimate">

        <div class="price-estimate__left">
            <% if @ad.insurance_required %>
                <label>Forsikringssum:</label>
                <span><%= format_monetary_full( calc.max_insurance_coverage(rule) ) %></span>
            <% end %>
        </div>

        <div class="price-estimate__right">
            <label class="price-estimate__label">Pris for kunde:</label>
            <span class="price-estimate__value"><%= format_monetary_full( calc.payin_amount(rule) ) %></span>
            <br>

            <% if @ad.insurance_required %>
                <label class="price-estimate__label">Leiegebyr med forsikring:</label>
            <% else %>
                <label class="price-estimate__label">Leiegebyr:</label>
            <% end %>
            <span class="price-estimate__value"><%= format_monetary_full( calc.total_fee(rule) ) %></span>
            <br>

            <label class="price-estimate__label">Utbetalt til deg:</label>
            <span class="price-estimate__value"><%= format_monetary_full( calc.payout_amount(rule) ) %></span>
        </div>
    </div>
<% end %>