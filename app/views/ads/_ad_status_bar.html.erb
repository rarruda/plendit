<% if user_signed_in? && current_user == ad.user %>
    <div class="container">
        <div class="row">
            <div class="ad-status-bar ad-status-bar--<%= ad.status %> u-push-down">
                <div class="ad-status-bar__div">
                    <h5 class="ad-status-bar__title">
                        <% if ad.status == 'published' %>
                            Annonsen er aktiv.
                        <% elsif ad.status == 'draft' %>
                            Annonsen er under utarbeidelse.
                        <% elsif ad.status == 'waiting_review' %>
                            Annonsen er sendt til kontroll.
                        <% elsif ad.status == 'paused' %>
                            Annonsen er satt p√• pause.
                        <% elsif ad.status == 'refused' %>
                            Annonsen var ikke godkjent av kontroll.
                        <% elsif ad.status == 'stopped' %>
                            Annonsen er stoppet.
                        <% end %>
                    </h5>
                    <% if ad.status == 'refused' %>
                        <small>Grunnen: <%= ad.refusal_reason %></small>
                    <% end %>
                </div>

                <div>
                    <%= render partial: "ad_status_box", locals: { ad: ad } %>
                </div>
            </div>
        </div>
    </div>
<% end %>

<% if user_signed_in? && current_user.is_site_admin? %>
    <div class="container">
        <div class="row">
            <div class="ad-status-bar ad-status-bar--<%= ad.status %> u-push-down">
                <div>
                    Admin kontroll:
                </div>
                <div>
                    <% if ad.status == 'waiting_review' %>
                        <%= button_to 'Godkjenn', approve_ad_path(ad), form_class: "ad-status-box__form", class: "ad-status-box__button button " %>
                    <% end %>
                    <% if ad.status != 'refused' %>
                        <%= form_for @ad, url: refuse_ad_path(ad), method: :post, class: "ad-status-box__form" do |f| %>
                            <%= f.text_field :refusal_reason, placeholder: "refusal reason" %>
                            <%= f.submit 'Refuse', class: "ad-status-box__button button" %>
                        <% end %>
                    <% end %>
                    <% if ad.status != 'suspended' %>
                        <%= button_to 'Suspend (blackhole)', suspend_ad_path(ad), form_class: "ad-status-box__form", class: "ad-status-box__button button " %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
