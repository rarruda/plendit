<div class="feedback-item-box">
    <div class="feedback-item-box__avatar-box">
        <%= image_tag "placeholder_avatar.png", alt: "username", class: "avatar--large" %>
        <p><%= feedback.from_profile.name %></p>
    </div>
    <div class="feedback-item-box__body">
        <p class="feedback-item-box__summary">
            <%= render('shared/stars.html', rating: feedback.from_profile.calculate_average_rating ) %>
            <%= feedback.updated_at.to_formatted_s(:plendit_short_date)  %>
            p√• <%= link_to feedback.ad.title, ad_path(feedback.ad) %> 
       </p>
       <p>
            <%= feedback.body %><br>
       </p>
    </div>
</div>