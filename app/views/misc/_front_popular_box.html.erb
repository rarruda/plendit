<%
    topics = Rails.configuration.x.frontpage.popular_ads
    topics = topics.map { |t|
        t[:style] = "background-image: url(#{image_path(t[:image])});"
        t
    }
%>

<div class="container">
    <div class="row">
        <div class="twelve columns front-popular-box">
            <div class="front-popular-box">
                <h2 class="front-popular-box__title">Popul√¶re kategorier</h2>
                <div class="front-popular-box__row1">
                     <%= link_to (search_path q: topics[0][:term]), style: topics[0][:style], class: "front-popular-box__link" do %>
                         <span class="front-popular-box__link__title"><%= topics[0][:title] %></span>
                     <% end %>
                     <%= link_to (search_path q: topics[1][:term]), style: topics[1][:style], class: "front-popular-box__link" do %>
                         <span class="front-popular-box__link__title"><%= topics[1][:title] %></span>
                     <% end %>
                </div>
                <div class="front-popular-box__row2">
                     <%= link_to (search_path q: topics[2][:term]), style: topics[2][:style], class: "front-popular-box__link" do %>
                         <span class="front-popular-box__link__title"><%= topics[2][:title] %></span>
                     <% end %>

                    <div class="front-popular-box__col1">
                         <%= link_to (search_path q: topics[3][:term]), style: topics[3][:style], class: "front-popular-box__link" do %>
                             <span class="front-popular-box__link__title"><%= topics[3][:title] %></span>
                         <% end %>

                         <%= link_to (search_path q: topics[4][:term]), style: topics[4][:style], class: "front-popular-box__link" do %>
                             <span class="front-popular-box__link__title"><%= topics[4][:title] %></span>
                         <% end %>
                    </div>

                     <%= link_to (search_path q: topics[5][:term]), style: topics[5][:style], class: "front-popular-box__link" do %>
                         <span class="front-popular-box__link__title"><%= topics[5][:title] %></span>
                     <% end %>
                </div>
            </div>

        </div>
    </div>
</div>
