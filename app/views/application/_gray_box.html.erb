<div class="gray-box u-push-down" <%= defined?(id).nil? ? '' : "id=#{id}" %> >
    <% if defined? title %>
        <h5 class="gray-box__title"><%= title %></h5>
    <% end %>
    <div class="gray-box__body <%= defined?(nopad) && nopad ? "gray-box__body--nopad" : '' %>">
        <%= yield %>
    </div>
</div>