<%= form_for @accident_report, url: { action: 'create' }, html: { multipart: true } do |f| %>
    <% if @accident_report.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@accident_report.errors.count, 'error') %> prohibited this accident_report from being saved:</h2>
            <ul>
                <% @accident_report.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        Du er i ferd med å sende inn en skaldemelding på
        <%= link_to "\"#{@booking.ad.display_title}\"", @booking.ad %>.
    </p>
    <p>
        <%= link_to 'Tilbake til bookingen.', @booking %>.
    </p>

    <div class="row">
        <%= f.label :happened_at, 'Når skjedde skaden?' %>
        <%= f.datetime_select :happened_at %>
    </div>
    <br>
    <div class="row">
        <%= f.label :location_address_line, 'Hvor skjedds skaden?' %>
        <%= f.text_field :location_address_line, class: 'u-full-width' %>
    </div>
    <br>
    <div class="row">
        <%= f.label :body, 'Hva skjedde?' %>
        <%= f.text_area :body, class: 'u-full-width' %>
    </div>
    <br>
    <%= f.label :attachments, 'Last opp bilder eller pdf:' %>
    <%= f.file_field :attachments, multiple: true %>

    <div class="u-pull-right">
        <%= f.submit 'Send', form_class: 'u-inline', class: 'button button-primary' %>
    </div>
<% end %>