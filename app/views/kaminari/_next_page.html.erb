<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li>
    <% if current_page.last? %>
            <span class="pagination__next pagination__disabled"><%= t('views.pagination.next').html_safe %></span>
    <% else %>
        <%= link_to t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, data: { link_page: current_page.number + 1 }, class: "pagination__next" %>
    <% end %>
</li>
