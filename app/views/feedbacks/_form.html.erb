<%= form_for(@feedback, url: {action: "create", controller: "feedbacks"}) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ad_id %><br>
    <%#= f.number_field :ad_id %>
    <%= f.collection_select(:ad_id, Ad.all, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :from_user_id %><br>
    <%#= f.number_field :from_user_id %>
    <%= f.collection_select(:from_user_id, User.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
