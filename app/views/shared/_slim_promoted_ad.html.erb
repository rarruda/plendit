<div class="slim-promoted-ad">
    <%= link_to image_tag( ad.image_url_with_fallback(:thumb), alt: "username", class: "slim-promoted-ad__image"), ad %>

    <h6 class="slim-promoted-ad__title"><%= link_to ad.title, ad %></h6>

    <p class="slim-promoted-ad__body">
        <%= ad.body[0..200] %>
    </p>

    <button class="slim-promoted-ad__button">
        <%= image_tag "add_favorite_small.png", alt: "username", class: "slim-promoted-ad__fav-button-image" %>
         Legg til i favoritter
    </button>

    <div class="slim-promoted-ad__price-floater">
        <%= ad.price %>,-
        <small>per&nbsp;dag</small>
    </div>
</div>
