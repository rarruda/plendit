    <div>
        <ol class="profile-quality-box__verifications-list">
            <li>
                <% if user.id_card_status == :verified %>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>ID-kort (verifisert)</span>
                <% else %>
                    <%= icon 'times-circle-o', class: 'fa-lg u-fill-brown profile-quality-box__icon' %>
                    <span>ID-kort (ikke verifisert)</span>
                <% end %>
            </li>

            <li>
                <% if user.email_verified? %>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>e-postadresse (verifisert)</span>
                <% else %>
                    <%= icon 'times-circle-o', class: 'fa-lg u-fill-brown profile-quality-box__icon' %>
                    <span>e-postadresse (ikke verifisert)</span>
                <% end %>
            </li>

            <li>
                <% if user.phone_verified? %>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>telefonnummer (verifisert)</span>
                <% else %>
                    <%= icon 'times-circle-o', class: 'fa-lg u-fill-brown profile-quality-box__icon' %>
                    <span>telefonnummer (ikke verifisert)</span>
                <% end %>
            </li>

            <% if user.identities.find_by(provider:'facebook').present? %>
                <li>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>facebook-konto (verifisert)</span>
                </li>
            <% end %>
            <% if user.identities.find_by(provider:'google').present? %>
                <li>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>google-konto (verifisert)</span>
                </li>
            <% end %>
            <% if user.identities.find_by(provider:'spid').present? %>
                <li>
                    <%= icon 'check-circle-o', class: 'fa-lg u-fill-green profile-quality-box__icon' %>
                    <span>SPiD-konto (verifisert)</span>
                </li>
            <% end %>
        </ol>
    </div>

</div>
