<%
    if !defined? size
      size = "medium"
    end

    if !defined? css_class
      css_class = ""
    end

    case size
    when "huge"
      dimensions = "120x120"
    when "large"
      dimensions = "80x80"
    when "medium"
      dimensions = "64x64"
    when "small"
      dimensions = "48x48"
    when "tiny"
      dimensions = "24x24"
    else
      puts "Invalid avatar size: #{size}"
      dimensions = "64x64"
      size = "medium"
    end
%>
<%= image_tag user.safe_avatar_url, alt: "", class: "avatar--#{size} #{css_class}", size: size %>
