<div class="personal-bar">
    <div class="container">
        <div class="row">
            <div class="twelve columns">
                <%
                    if not defined? selected
                        selected = "Kontrollpanel"
                    end

                    links = [
                        { text: "Kontrollpanel",     path: users_path },
                        { text: "Dine annonser",     path: users_ads_path },
                        { text: "Dine forespÃ¸rsler", path: bookings_path },
                        { text: "Leiehistorikk",     path: "#" },
                        { text: "Favoritter",        path: users_favorite_ads_path },
                        { text: "Din profil",        path: edit_users_path },
                    ]
                    links.map { |e| e[:selected] = e[:text].downcase == selected.downcase }
                %>

                <% links.each do |link| %>
                    <a class="personal-bar__link <%= link[:selected] ? "personal-bar__link--active" : ""%>"
                       href="<%= link[:path] %>"><%= link[:text] %></a>
                <% end %>
             </div>
        </div>
    </div>
</div>