<div class="personal-bar">
    <div class="container">
        <div class="row">
            <div class="twelve columns">
                <%
                    if not defined? selected
                        selected = 'Siste nytt'
                    end

                    links = [
                        { text: 'Siste nytt',        path: users_path },
                        { text: 'Annonser',          path: users_ads_path },
                        { text: 'Profil',            path: private_profile_users_path },
                        { text: 'ForespÃ¸rsler',      path: bookings_path },
                        { text: 'Favoritter',        path: users_favorite_ads_path },
                        { text: 'Leiehistorikk',     path: rental_history_users_path }
                    ]

                    unless Plendit::Application.config.x.application_mode.beta
                        links << { text: '[Betaling]',          path: payment_users_path }
                    end

                    links.map { |e| e[:selected] = e[:text].downcase == selected.downcase }
                %>

                <% links.each do |link| %>
                    <a class="personal-bar__link <%= link[:selected] ? 'personal-bar__link--active' : ''%>"
                       href="<%= link[:path] %>"><%= link[:text] %></a>
                <% end %>
             </div>
        </div>
    </div>
</div>